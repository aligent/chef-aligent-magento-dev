<%= node['app']['document_root'] %>/var/log/*log {
    <%= node['logrotate']['interval'] %>
<%- if node['logrotate'].key?('magento_rotations') -%>
    rotate <%= node['logrotate']['magento_rotations'] %>
<%- end -%>
    missingok
    notifempty
    sharedscripts
    compress
    delaycompress
    dateext
}
